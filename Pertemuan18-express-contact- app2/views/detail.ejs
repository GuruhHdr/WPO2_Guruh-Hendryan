<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                  Data Contact Tidak Ada kak <br><a href="/contact" class="alert-link fw-normal">&laquo;kembali ke daftar contact</a>
                  </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <!-- <img src="..." class="card-img-top" alt="..."> -->
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %></h6>
                  <p class="card-text"><%= contact.email %></p>
                  <a href="/contact" class="btn btn-primary">&laquo; Kembali ke daftar kontak</a>
                
                </div>
              </div>
            <% } %>
        </div>
    </div>
</div>